<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Provide local aliases for the Material 3 DayNight themes so manifest references resolve. -->
    <style name="Theme.Material3.DayNight" parent="Theme.MaterialComponents.DayNight" />
    <style name="Theme.Material3.DayNight.NoActionBar" parent="Theme.Material3.DayNight">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <!-- Application-wide theme that composes on top of the NoActionBar variant. -->
    <style name="Theme.Procard" parent="Theme.Material3.DayNight.NoActionBar" />
</resources>
